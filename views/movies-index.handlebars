<h1>Now Playing</h1>
<style>
#flex {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    margin: 10px;
}

a {
    margin: 10px;
    max-width: 200px;
}
</style>
<div id='flex'>
    {{#each movies}}
    <a href='/movies/{{this.id}}'>
        <img src='http://image.tmdb.org/t/p/w185{{this.poster_path}}'>
        <h3>{{this.title}}</h3>
    </a>
  {{/each}}
</div>
